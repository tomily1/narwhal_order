<% if @orders.present?%>
  <div class="row mb-6">
    <% @orders.each do |order| %>
     <%= render partial: 'layouts/orders/card', locals: { order: order }%>
    <% end %>
  </div>
  <% if @orders.count > (params[:per_page] || Order.per_page)%>
    <%= render partial: 'layouts/pagination', locals: { records: @orders }%>
  <% end %>
<% else %>
  <div class="row justify-content-center">
    <h3 class="mt-4"> No narwhal order. </h2>
  </div>
<% end %>
